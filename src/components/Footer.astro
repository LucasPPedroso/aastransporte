<style>
	footer {
		padding: 2em 1em 2em 1em;
		background: #003366;
		color: white;
		text-align: center;
	}
	
	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.footer-info {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-around;
		gap: 2em;
		width: 100%;
		margin-bottom: 2em;
	}
	
	.company-info, .contact-info, .address-info {
		flex: 1;
		min-width: 250px;
		text-align: left;
	}
	
	h3 {
		font-size: 1.5em;
		margin-bottom: 0.5em;
		color: #FF9900;
	}
	
	h4 {
		font-size: 1.2em;
		margin-bottom: 0.5em;
		color: #FF9900;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin: 1em 0;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
	}
	
	.social-links a:hover {
		background-color: #FF9900;
		transform: translateY(-3px);
	}
	
	.copyright {
		margin-top: 1.5em;
		padding-top: 1.5em;
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		font-size: 0.9em;
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
	
	@media (max-width: 768px) {
		.footer-info {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}
		
		.company-info, .contact-info, .address-info {
			width: 100%;
			text-align: center;
		}
	}
</style>
