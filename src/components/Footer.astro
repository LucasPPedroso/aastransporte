<style>
	footer {
		background-color: #f8f9fa;
		color: #333;
		font-size: 0.95rem;
	}
	
	.footer-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	.footer-top {
		padding: 4rem 0 3rem;
	}
	
	.footer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	
	.footer-column {
		display: flex;
		flex-direction: column;
	}
	
	.footer-logo h3 {
		color: #003366;
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}
	
	.company-description {
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}
	
	.company-details p {
		margin: 0.3rem 0;
		font-size: 0.9rem;
	}
	
	h4 {
		color: #003366;
		font-size: 1.1rem;
		margin-bottom: 1.2rem;
		position: relative;
		padding-bottom: 0.5rem;
	}
	
	h4::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: 0;
		width: 40px;
		height: 2px;
		background-color: #FF9900;
	}
	
	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-links li {
		margin-bottom: 0.7rem;
	}
	
	.footer-links a {
		color: #555;
		text-decoration: none;
		transition: color 0.3s ease, transform 0.3s ease;
		display: inline-block;
	}
	
	.footer-links a:hover {
		color: #FF9900;
		transform: translateX(5px);
	}
	
	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.contact-item {
		display: flex;
		align-items: flex-start;
		gap: 0.8rem;
	}
	
	.contact-item svg {
		margin-top: 0.2rem;
		flex-shrink: 0;
		color: #FF9900;
	}
	
	.contact-item a, .contact-item p {
		margin: 0;
		color: #555;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	.contact-item a:hover {
		color: #FF9900;
	}
	
	.social-media {
		margin-top: 3rem;
		text-align: center;
	}
	
	.social-media h4 {
		display: inline-block;
		margin-bottom: 1rem;
	}
	
	.social-media h4::after {
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
	}
	
	.social-icons {
		display: flex;
		justify-content: center;
		gap: 1rem;
	}
	
	.social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: #e9ecef;
		color: #555;
		transition: all 0.3s ease;
	}
	
	.social-icon:hover {
		background-color: #FF9900;
		color: white;
		transform: translateY(-5px);
	}
	
	.footer-bottom {
		background-color: #003366;
		color: white;
		padding: 1.5rem 0;
	}
	
	.footer-bottom .footer-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}
	
	.footer-bottom p {
		margin: 0;
	}
	
	.footer-legal {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.footer-legal a {
		color: white;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	.footer-legal a:hover {
		color: #FF9900;
	}
	
	.separator {
		color: rgba(255, 255, 255, 0.5);
	}
	
	@media (max-width: 992px) {
		.footer-container {
			padding: 0 1rem;
		}
	}
	
	@media (max-width: 768px) {
		.footer-top {
			padding: 3rem 0 2rem;
		}
		
		.footer-grid {
			gap: 2rem;
		}
		
		.social-media {
			margin-top: 2rem;
		}
		
		.footer-bottom .footer-container {
			flex-direction: column;
			text-align: center;
		}
		
		.footer-legal {
			justify-content: center;
			flex-wrap: wrap;
		}
	}
</style>
