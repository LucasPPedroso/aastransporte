<script>
// Fecha o menu mobile ao clicar em qualquer link
if (typeof window !== 'undefined') {
  window.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileNav = document.querySelector('.mobile-nav');
    if (mobileNav && menuToggle) {
      mobileNav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menuToggle.checked = false;
        });
      });
    }

    // Controle dos dropdowns no desktop
    document.querySelectorAll('.has-dropdown > span').forEach(dropdown => {
      dropdown.addEventListener('click', (e) => {
        e.preventDefault();
        const parent = dropdown.parentElement;
        const wasExpanded = parent.getAttribute('aria-expanded') === 'true';
        
        // Fecha todos os outros dropdowns
        document.querySelectorAll('.has-dropdown').forEach(item => {
          if (item !== parent) {
            item.setAttribute('aria-expanded', 'false');
          }
        });
        
        // Abre/fecha o dropdown clicado
        parent.setAttribute('aria-expanded', (!wasExpanded).toString());
      });
    });

    // Fecha dropdowns ao clicar fora
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.has-dropdown')) {
        document.querySelectorAll('.has-dropdown').forEach(dropdown => {
          dropdown.setAttribute('aria-expanded', 'false');
        });
      }
    });

    // Fecha dropdowns ao pressionar ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.has-dropdown').forEach(dropdown => {
          dropdown.setAttribute('aria-expanded', 'false');
        });
      }
    });
  });
}

// Menu mobile toggle functionality
const menuItems = document.querySelectorAll('.mobile-nav span');
menuItems.forEach(item => {
  item.addEventListener('click', () => {
    const parent = item.parentElement;
    parent.classList.toggle('active');
  });
});
</script>

<style>
.header-container {
  display: flex;
  align-items: center;
