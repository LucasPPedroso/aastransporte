  font-size: 1.08rem;
  letter-spacing: 0.01em;
  padding: 0.5rem 0.9rem;
  border-radius: 5px;
  transition: background 0.18s, color 0.18s;
  text-decoration: none;
}
.nav-links a.active,
.nav-links a:focus,
.nav-links a:hover,
.nav-links .has-dropdown:hover > span,
.nav-links .has-dropdown:focus-within > span {
  background: #fff6ea;
  color: #FF9900;
}
.nav-links .has-dropdown > span {
  cursor: pointer;
  position: relative;
}
.nav-links .has-dropdown > span::after {
  content: '\25BC';
  font-size: 0.7em;
  margin-left: 0.4em;
  color: #bdbdbd;
  transition: color 0.2s;
}
.nav-links .has-dropdown:hover > span::after,
.nav-links .has-dropdown:focus-within > span::after {
  color: #FF9900;
}
.nav-links .dropdown {
  display: none;
  position: absolute;
  top: 2.5rem;
  left: 0;
  background: #fff;
  box-shadow: 0 8px 32px rgba(0,0,0,0.10);
  border-radius: 12px;
  min-width: 230px;
  z-index: 10;
  padding: 0.5rem 0;
  border: 1px solid #f2f2f2;
  animation: fadeIn 0.18s;
}
.nav-links .has-dropdown[aria-expanded="true"] .dropdown {
  display: block;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
.dropdown li {
  padding: 0;
  border-bottom: 1px solid #f5f5f5;
}
.dropdown li:last-child {
  border-bottom: none;
}
.dropdown a {
  display: block;
  padding: 0.7rem 1.3rem;
  color: #232323;
  font-size: 1rem;
  border-radius: 0;
  background: none;
  transition: background 0.18s, color 0.18s;
}
.dropdown a:hover {
  background: #fff6ea;
  color: #FF9900;
}
.header-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* Menu mobile */
.menu-toggle {
  display: none;
}

.menu-button {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 30px;
  height: 21px;
  padding: 0;
  background: none;
  border: none;
  cursor: pointer;
  z-index: 100;
}

.menu-button span {
  display: block;
  width: 100%;
  height: 3px;
  background-color: #232323;
  transition: all 0.3s ease-in-out;
  border-radius: 3px;
}

.mobile-nav {
  display: none;
}

@media (max-width: 1024px) {
  .main-nav {
    display: none;
  }
  
  .menu-button {
    display: flex;
  }

  .menu-toggle:checked ~ .menu-button span:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }

  .menu-toggle:checked ~ .menu-button span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle:checked ~ .menu-button span:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  .mobile-nav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #fff;
    padding: 80px 2rem 2rem;
    z-index: 90;
    overflow-y: auto;
  }

  .menu-toggle:checked ~ .mobile-nav {
    display: block;
  }

  .mobile-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-nav ul ul {
    padding-left: 1.5rem;
    margin: 0.5rem 0;
    display: none;
  }

  .mobile-nav li {
    margin: 1rem 0;
  }

  .mobile-nav span {
    display: block;
    font-weight: 500;
    font-size: 1.1rem;
    color: #232323;
    padding: 0.5rem 0;
    cursor: pointer;
  }

  .mobile-nav span:after {
    content: '+';
    float: right;
    font-size: 1.2em;
  }

  .mobile-nav li.active > span:after {
    content: '-';
  }

  .mobile-nav li.active > ul {
    display: block;
  }

  .mobile-nav a {
    display: block;
    color: #232323;
    text-decoration: none;
    padding: 0.5rem 0;
    font-size: 1rem;
  }

  .mobile-nav a:hover,
  .mobile-nav a:focus {
    color: #FF9900;
  }

  .mobile-nav .whatsapp-link {
    display: inline-flex;
    align-items: center;
