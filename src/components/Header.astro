.nav-links .has-dropdown[aria-expanded="true"] .dropdown {
  display: block;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
.dropdown li {
