<script>
// Fecha o menu mobile ao clicar em qualquer link
if (typeof window !== 'undefined') {
  window.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileNav = document.querySelector('.mobile-nav');
    if (mobileNav && menuToggle) {
      mobileNav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menuToggle.checked = false;
        });
      });
    }
  });
}
</script>

<style>
.header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 2rem;
  max-width: 1400px;
  margin: 0 auto;
  gap: 1.5rem;
  position: relative;
}
.logo-img {
  height: 48px;
  width: auto;
  display: block;
}
.main-nav {
  flex: 2;
}
.nav-links {
  display: flex;
  align-items: center;
  gap: 1.2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-links li {
  position: relative;
}
.nav-links .has-dropdown > span {
  cursor: pointer;
  font-weight: 500;
  color: #003366;
  padding: 0.5rem 0.7rem;
  border-radius: 4px;
  transition: background 0.2s;
}
.nav-links .has-dropdown:hover > span,
.nav-links .has-dropdown:focus-within > span {
  background: #f5f5f5;
}
.nav-links .dropdown {
  display: none;
  position: absolute;
  top: 2.2rem;
  left: 0;
  background: white;
  box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  border-radius: 6px;
  min-width: 220px;
  z-index: 10;
  padding: 0.5rem 0;
}
.nav-links .has-dropdown:hover .dropdown,
.nav-links .has-dropdown:focus-within .dropdown {
  display: block;
}
.dropdown li {
  padding: 0;
}
.dropdown a {
  display: block;
  padding: 0.7rem 1.2rem;
  color: #003366;
  text-decoration: none;
  font-size: 1rem;
  transition: background 0.2s;
}
.dropdown a:hover {
  background: #f5f5f5;
  color: #FF9900;
}
.header-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.whatsapp-link {
  display: flex;
  align-items: center;
  background: #25d3661a;
  border-radius: 50%;
  padding: 0.4rem;
  transition: background 0.2s;
}
.whatsapp-link:hover {
  background: #25d36633;
}
.search-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.4rem;
  border-radius: 50%;
  transition: background 0.2s;
}
.search-btn:hover {
  background: #f5f5f5;
}
.menu-toggle,
.menu-button {
  display: none;
}
.contact-button {
  background-color: #FF9900;
  color: white !important;
  padding: 0.5rem 1rem !important;
  border-radius: 4px;
  transition: background-color 0.3s ease !important;
  margin-left: 0.5rem;
}
.contact-button:hover {
  background-color: #e68a00;
}
@media (max-width: 1100px) {
  .header-container {
    padding: 1rem;
    gap: 0.5rem;
  }
  .nav-links {
    gap: 0.5rem;
  }
}
@media (max-width: 900px) {
  .main-nav {
    display: none !important;
  }
  .menu-toggle,
  .menu-button {
    display: block;
  }
  .menu-toggle {
    position: absolute;
    left: -9999px;
  }
  .menu-button {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;
    cursor: pointer;
    z-index: 102;
  }
  .menu-button span {
    display: block;
    height: 3px;
    width: 100%;
    background-color: #003366;
    border-radius: 3px;
    transition: all 0.3s ease;
  }
  .menu-toggle:checked + .menu-button span:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }
  .menu-toggle:checked + .menu-button span:nth-child(2) {
    opacity: 0;
  }
  .menu-toggle:checked + .menu-button span:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }
  .mobile-nav {
    display: none;
    position: fixed;
    top: 0;
    right: -100vw;
    width: 85vw;
    max-width: 370px;
    height: 100vh;
    background: white;
    box-shadow: -5px 0 15px rgba(0,0,0,0.08);
    z-index: 101;
    padding: 2.5rem 1.5rem 1.5rem 1.5rem;
    transition: right 0.3s cubic-bezier(.4,0,.2,1);
    overflow-y: auto;
  }
  .menu-toggle:checked ~ .mobile-nav {
    display: block;
    right: 0;
  }
  .mobile-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .mobile-nav > ul > li {
    margin-bottom: 1.2rem;
  }
  .mobile-nav ul ul {
    margin-top: 0.5rem;
    margin-left: 1.2rem;
    border-left: 2px solid #f5f5f5;
    padding-left: 1rem;
  }
  .mobile-nav a,
  .mobile-nav span {
    display: block;
    color: #003366;
    font-size: 1.1rem;
    text-decoration: none;
    padding: 0.5rem 0;
    font-weight: 500;
  }
  .mobile-nav .contact-button {
    margin-top: 1.5rem;
    width: 100%;
    text-align: center;
  }
}
@media (min-width: 901px) {
  .mobile-nav {
    display: none !important;
  }
  .menu-toggle,
  .menu-button {
    display: none !important;
  }
}
</style>
